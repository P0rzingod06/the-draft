{
  "name": "the-draft",
  "version": "1.0.0",
  "author": "The Squad",
  "description": "Package for all draft related UI files",
  "scripts": {
    "build": "npm run build:dev",
    "build:dev": "webpack --progress --colors",
    "build:prod": "webpack --config webpack.prod.config.js --progress --colors",
    "serve:dev": "webpack-dev-server --hot --progress --colors --content-base dist/",
    "serve:prod": "http-server dist/ --cors",
    "start": "npm run serve:dev",
    "build-css": "node-sass --include-path scss src/main.scss src/assets/main.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\""
  },
  "dependencies": {
    "@angular/common": "~2.0.1",
    "@angular/compiler": "~2.0.1",
    "@angular/core": "~2.0.1",
    "@angular/forms": "~2.0.1",
    "@angular/http": "~2.0.1",
    "@angular/platform-browser": "~2.0.1",
    "@angular/platform-browser-dynamic": "~2.0.1",
    "@angular/router": "~3.0.1",
    "@angular/upgrade": "~2.0.1",
    "angular-in-memory-web-api": "~0.1.1",
    "bootstrap": "^4.0.0-alpha.2",
    "core-js": "^2.4.1",
    "font-awesome": "^4.6.3",
    "primeng": "^1.0.0-beta.17",
    "reflect-metadata": "^0.1.8",
    "rxjs": "5.0.0-beta.12",
    "zone.js": "^0.6.25"
  },
  "devDependencies": {
    "concurrently": "^3.0.0",
    "copy-webpack-plugin": "^3.0.1",
    "css-loader": "^0.23.1",
    "html-webpack-plugin": "^2.22.0",
    "http-server": "^0.9.0",
    "node-sass": "^3.8.0",
    "nodemon": "^1.10.0",
    "raw-loader": "^0.5.1",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "ts-loader": "^0.8.2",
    "typescript": "^2.0.3",
    "typings": "^1.4.0",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/P0rzingod06/the-draft"
  }
}
