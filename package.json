{
  "name": "the-draft",
  "version": "1.0.0",
  "author": "The Squad",
  "description": "Package for all draft related UI files",
  "scripts": {
    "start": "concurrently \"npm run tsc:w\" \"npm run lite\" ",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "lite": "lite-server",
    "typings": "typings",
    "postinstall": "typings install",
    "build-css": "node-sass --include-path scss app/main.scss app/main.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\""
  },
  "dependencies": {
    "angular2": "2.0.0-beta.15",
    "bootstrap": "^4.0.0-alpha.2",
    "es6-shim": "^0.35.0",
    "reflect-metadata": "0.1.2",
    "rxjs": "5.0.0-beta.2",
    "systemjs": "0.19.26",
    "zone.js": "0.6.10"
  },
  "devDependencies": {
    "concurrently": "^2.0.0",
    "lite-server": "^2.2.0",
    "node-sass": "^3.8.0",
    "nodemon": "^1.10.0",
    "typescript": "^1.8.10",
    "typings": "^0.7.12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/P0rzingod06/the-draft"
  }
}
